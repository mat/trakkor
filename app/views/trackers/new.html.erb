<h2>Step 3: Create the tracker</h2>

<%= error_messages_for :tracker %>

<% form_for @tracker, :url => {:action => "create"}, :html => {:class => 'form'}  do |f| -%>

<div class="group">
  <label class="label">URL</label>
  <%= f.text_field 'uri', :size => 80, :class => 'text_field' %>
</div>

<div class="group">
  <label class="label">XPath</label>
  <%= f.text_field 'xpath', :size => 80, :class => 'text_field' %>
</div>

<div class="group">
  <label class="label">Name</label>
  <%= f.text_field 'name', :size => 80, :class => 'text_field' %>
</div>

<div class="group">
  <label class="label">Web Hook URL</label>
  <%= f.text_field 'web_hook', :size => 80, :class => 'text_field' %>
</div>

<div class="group navform">
 <%= f.submit 'Create' %>
</div>

<% end -%>

