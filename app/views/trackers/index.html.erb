<h1>Listing trackers</h1>

<table>
  <tr>
  </tr>

<% for tracker in @trackers %>
  <tr>
    <td><%= link_to "#{tracker.uri}", tracker %></td>
    <td>last updated <%= relative_time(tracker.last_update) %></td>
    <td><%= link_to 'Edit', edit_tracker_path(tracker) %></td>
    <td><%= link_to 'Destroy', tracker, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

